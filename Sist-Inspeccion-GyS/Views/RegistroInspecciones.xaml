<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sist_Inspeccion_GyS.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="Sist_Inspeccion_GyS.Views.RegistroInspecciones"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="980" d:DesignWidth="1850"
             Background="DarkGray">
    <!--Background="#13295A"-->
    <ScrollViewer>
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <!--Definición de columnas y filas del grid principal-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.3*"></ColumnDefinition>
                <ColumnDefinition Width="1.6*"></ColumnDefinition>
                <ColumnDefinition Width="2.1*"></ColumnDefinition>
                <ColumnDefinition Width="2.5*"></ColumnDefinition>
                <ColumnDefinition Width="1.5*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <!--Groupbox tipo de inspección-->
            <GroupBox x:Name="grbTipoInspeccion" Grid.Column="0" Grid.Row="0" Header="Tipo de inspección" FontSize="18" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,5" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <RadioButton x:Name="rbSalida"  Style="{StaticResource MaterialDesignChoiceChipAccentRadioButton}" GroupName="grpTipoInspeccion" Content="Salida" FontSize="20"  Width="100" Height="50" HorizontalAlignment="Center" Margin="15" IsChecked="True"/>
                    <RadioButton x:Name="rbEntrada"  Grid.Row="1" Style="{StaticResource MaterialDesignChoiceChipAccentRadioButton}" GroupName="grpTipoInspeccion" Content="Entrada" FontSize="20" Width="100" Height="50" HorizontalAlignment="Center" Margin="15"/>
                </Grid>
            </GroupBox>

            <!--Groupbox información general-->
            <GroupBox x:Name="grbInfoGeneral" Grid.Column="1" Grid.ColumnSpan="4" Grid.Row="0" Header="Información General" FontSize="18" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="0.4*"></ColumnDefinition>
                        <ColumnDefinition Width="0.6*"></ColumnDefinition>
                        <ColumnDefinition Width="0.5*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBox x:Name="txtInspector" CharacterCasing="Upper" Grid.Column="0" Grid.Row="0" materialDesign:HintAssist.Hint="Inspector(a)" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Center" Margin="2.5" FontSize="18"/>
                    <TextBox x:Name="txtNoCaja" Grid.Column="1" Grid.Row="0" materialDesign:HintAssist.Hint="No. Remolque" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Center" Margin="2.5" PreviewTextInput="txtNoCaja_PreviewTextInput" FontSize="18"/>
                    <TextBox x:Name="txtNombreOperador" CharacterCasing="Upper" Grid.Column="2" Grid.Row="0" Grid.ColumnSpan="2" materialDesign:HintAssist.Hint="Nombre del operador" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Center" Margin="2.5" FontSize="18"/>
                    <TextBox x:Name="txtCliente" CharacterCasing="Upper" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" materialDesign:HintAssist.Hint="Nombre CIA" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Center" Margin="2.5" FontSize="18"/>
                    <DatePicker x:Name="Fecha" Grid.Column="2" Grid.Row="1" MinWidth="120" materialDesign:HintAssist.Hint="Fecha" Margin="2.5" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" SelectedDate="{x:Static sys:DateTime.Now}" IsEnabled="False" FontSize="18"/>
                    <materialDesign:TimePicker x:Name="Hora" MinWidth="100" Style="{StaticResource MaterialDesignFloatingHintTimePicker}" materialDesign:HintAssist.Hint="Hora" Grid.Column="3" Grid.Row="1" Margin="2.5" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" SelectedTime="{x:Static sys:DateTime.Now}" IsEnabled="False" FontSize="18"/>
                </Grid>
            </GroupBox>

            <!--Popup para mostrar las imagenes al expandirlas-->
            <Popup x:Name="PopUp" VerticalAlignment="Center" HorizontalAlignment="Center" IsOpen="False" MaxHeight="600" MaxWidth="800" Placement="Center">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="DarkGray">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Grid.ColumnSpan="2" Grid.Column="0" Background="#FF3F51B5">
                        <TextBlock x:Name="txtPopUpTitulo" Text="Imagen" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="20"/>
                    </Grid>
                    <Button x:Name="btnPopUpCerrar" Grid.Row="0" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Stretch" Click="btnPopUpCerrar_Click">
                        <materialDesign:PackIcon Kind="Close" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    </Button>
                    <Image x:Name="PopUpImg" Stretch="Fill" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"/>
                </Grid>
            </Popup>
            <!--Groupbox imagenes-->
            <GroupBox x:Name="grbImagenes" Grid.Row="1" Grid.Column="0" Grid.RowSpan="1" Grid.ColumnSpan="2" Header="Imagenes" FontSize="18" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Column="0" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock FontSize="16"  Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Text="Parte frontal" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Button x:Name="btnExpandirImgFrontal" Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" Margin="2.5,2.5" Click="btnExpandirImgFrontal_Click">
                            <materialDesign:PackIcon Kind="ArrowExpand"></materialDesign:PackIcon>
                        </Button>
                        <Button Grid.Column="1" Grid.Row="2" VerticalAlignment="Top" Margin="2.5,2.5">
                            <materialDesign:PackIcon Kind="Refresh"></materialDesign:PackIcon>
                        </Button>
                        <Button x:Name="btnSubirImgFrontal" Grid.Column="1" Grid.Row="3" VerticalAlignment="Bottom" Click="btnSubirImgFrontal_Click" Margin="2.5,0">
                            <materialDesign:PackIcon Kind="Upload"></materialDesign:PackIcon>
                        </Button>
                        <Image x:Name="imgFrontal" Grid.Column="0" Grid.Row="1" Grid.RowSpan="3" Source="/Resources/Logowbg.png" Stretch="Fill" MaxHeight="160" MaxWidth="155"/>
                    </Grid>
                    <Grid Grid.Column="1" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock  FontSize="16" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Text="Parte trasera" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Button x:Name="btnExpandirImgTrasera" Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" Margin="2.5,2.5" Click="btnExpandirImgTrasera_Click">
                            <materialDesign:PackIcon Kind="ArrowExpand"></materialDesign:PackIcon>
                        </Button>
                        <Button Grid.Column="1" Grid.Row="2" VerticalAlignment="Top" Margin="2.5,2.5">
                            <materialDesign:PackIcon Kind="Refresh"></materialDesign:PackIcon>
                        </Button>
                        <Button x:Name="btnSubirImgTrasera" Grid.Column="1" Grid.Row="3" VerticalAlignment="Bottom" Click="btnSubirImgTrasera_Click" Margin="2.5,0">
                            <materialDesign:PackIcon Kind="Upload"></materialDesign:PackIcon>
                        </Button>
                        <Image x:Name="imgTrasera" Grid.Column="0" Grid.Row="1" Grid.RowSpan="3" Source="/Resources/Logowbg.png" Stretch="Fill" MaxHeight="160" MaxWidth="155"/>
                    </Grid>
                    <Grid Grid.Column="0" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock  FontSize="16" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Text="Parte derecha" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Button x:Name="btnExpandirImgDerecha" Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" Margin="2.5,2.5" Click="btnExpandirImgDerecha_Click">
                            <materialDesign:PackIcon Kind="ArrowExpand"></materialDesign:PackIcon>
                        </Button>
                        <Button Grid.Column="1" Grid.Row="2" VerticalAlignment="Top" Margin="2.5,2.5">
                            <materialDesign:PackIcon Kind="Refresh"></materialDesign:PackIcon>
                        </Button>
                        <Button x:Name="btnSubirImgDerecha" Grid.Column="1" Grid.Row="3" VerticalAlignment="Bottom" Click="btnSubirImgDerecha_Click" Margin="2.5,0">
                            <materialDesign:PackIcon Kind="Upload"></materialDesign:PackIcon>
                        </Button>
                        <Image x:Name="imgDerecha" Grid.Column="0" Grid.Row="1" Grid.RowSpan="3" Source="/Resources/Logowbg.png" Stretch="Fill" MaxHeight="160" MaxWidth="155" />
                    </Grid>
                    <Grid Grid.Column="1" Grid.Row="1"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock  FontSize="16" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Text="Parte izquierda" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Button x:Name="btnExpandirImgIzquierda" Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" Margin="2.5,2.5" Click="btnExpandirImgIzquierda_Click">
                            <materialDesign:PackIcon Kind="ArrowExpand"></materialDesign:PackIcon>
                        </Button>
                        <Button Grid.Column="1" Grid.Row="2" VerticalAlignment="Top" Margin="2.5,2.5">
                            <materialDesign:PackIcon Kind="Refresh"></materialDesign:PackIcon>
                        </Button>
                        <Button x:Name="btnSubirImgIzquierda" Grid.Column="1" Grid.Row="3" VerticalAlignment="Bottom" Click="btnSubirImgIzquierda_Click" Margin="2.5,0">
                            <materialDesign:PackIcon Kind="Upload"></materialDesign:PackIcon>
                        </Button>
                        <Image x:Name="imgIzquierda" Grid.Column="0" Grid.Row="1" Grid.RowSpan="3" Source="/Resources/Logowbg.png" Stretch="Fill" MaxHeight="160" MaxWidth="155"/>
                    </Grid>
                    <Grid Grid.Column="2" Grid.Row="0"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock  FontSize="16"  Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Text="Diesel" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Button x:Name="btnExpandirImgDiesel" Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" Margin="2.5,2.5" Click="btnExpandirImgDiesel_Click">
                            <materialDesign:PackIcon Kind="ArrowExpand"></materialDesign:PackIcon>
                        </Button>
                        <Button Grid.Column="1" Grid.Row="2" VerticalAlignment="Top" Margin="2.5,2.5">
                            <materialDesign:PackIcon Kind="Refresh"></materialDesign:PackIcon>
                        </Button>
                        <Button x:Name="btnSubirImgDiesel" Grid.Column="1" Grid.Row="3" VerticalAlignment="Bottom" Click="btnSubirImgDiesel_Click" Margin="2.5,0">
                            <materialDesign:PackIcon Kind="Upload"></materialDesign:PackIcon>
                        </Button>
                        <Image x:Name="imgDiesel" Grid.Column="0" Grid.Row="1" Grid.RowSpan="3" Source="/Resources/Logowbg.png" Stretch="Fill" MaxHeight="160" MaxWidth="155"/>
                    </Grid>
                    <Grid Grid.Column="2" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock  FontSize="16" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Text="Termómetro" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Button x:Name="btnExpandirTermometro" Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" Margin="2.5,2.5" Click="btnExpandirTermometro_Click">
                            <materialDesign:PackIcon Kind="ArrowExpand"></materialDesign:PackIcon>
                        </Button>
                        <Button Grid.Column="1" Grid.Row="2" VerticalAlignment="Top" Margin="2.5,2.5">
                            <materialDesign:PackIcon Kind="Refresh"></materialDesign:PackIcon>
                        </Button>
                        <Button x:Name="btnSubirImgTermometro" Grid.Column="1" Grid.Row="3" VerticalAlignment="Bottom" Click="btnSubirImgTermometro_Click" Margin="2.5,0">
                            <materialDesign:PackIcon Kind="Upload"></materialDesign:PackIcon>
                        </Button>
                        <Image x:Name="imgTermometro" Grid.Column="0" Grid.Row="1" Grid.RowSpan="3" Source="/Resources/Logowbg.png" Stretch="Fill" MaxHeight="160" MaxWidth="155"/>
                    </Grid>
                </Grid>
            </GroupBox>

            <!--Groupbox luces de la caja-->
            <GroupBox x:Name="grbLuces" Grid.Column="2" Grid.ColumnSpan="1" Grid.Row="1" Header="Luces del Remolque" FontSize="18" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="2*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock  Grid.Column="0" Grid.Row="0" Text="F. Der." FontSize="18" VerticalAlignment="Center"/>
                    <ToggleButton x:Name="tglFDerecha" Grid.Column="1" Grid.Row="0" Style="{StaticResource MaterialDesignSwitchToggleButton}" ToolTip="MaterialDesignSwitchToggleButton with Custom Track Background" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,20,0">
                        <materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                            <SolidColorBrush Color="Green" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                        <materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                            <SolidColorBrush Color="Red" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                    </ToggleButton>
                    <TextBlock  Grid.Column="0" Grid.Row="1" Text="C. Der." FontSize="18" VerticalAlignment="Center"/>
                    <ToggleButton x:Name="tglCDerecha" Grid.Column="1" Grid.Row="1" Style="{StaticResource MaterialDesignSwitchToggleButton}" ToolTip="MaterialDesignSwitchToggleButton with Custom Track Background" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,20,0">
                        <materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                            <SolidColorBrush Color="Green" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                        <materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                            <SolidColorBrush Color="Red" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                    </ToggleButton>
                    <TextBlock  Grid.Column="0" Grid.Row="2" Text="FR. Der." FontSize="18" VerticalAlignment="Center"/>
                    <ToggleButton x:Name="tglFrDerecha" Grid.Column="1" Grid.Row="2" Style="{StaticResource MaterialDesignSwitchToggleButton}" ToolTip="MaterialDesignSwitchToggleButton with Custom Track Background" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,20,0">
                        <materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                            <SolidColorBrush Color="Green" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                        <materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                            <SolidColorBrush Color="Red" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                    </ToggleButton>
                    <TextBlock  Grid.Column="0" Grid.Row="3" Text="Dir. Der." FontSize="18" VerticalAlignment="Center"/>
                    <ToggleButton x:Name="tglDirDerecha" Grid.Column="1" Grid.Row="3" Style="{StaticResource MaterialDesignSwitchToggleButton}" ToolTip="MaterialDesignSwitchToggleButton with Custom Track Background" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,20,0">
                        <materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                            <SolidColorBrush Color="Green" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                        <materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                            <SolidColorBrush Color="Red" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                    </ToggleButton>
                    <TextBlock  Grid.Column="0" Grid.Row="4" Text="Plafón" FontSize="18" VerticalAlignment="Center"/>
                    <ToggleButton x:Name="tglPlafon" Grid.Column="1" Grid.Row="4" Style="{StaticResource MaterialDesignSwitchToggleButton}" ToolTip="MaterialDesignSwitchToggleButton with Custom Track Background" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,20,0">
                        <materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                            <SolidColorBrush Color="Green" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                        <materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                            <SolidColorBrush Color="Red" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                    </ToggleButton>

                    <!---->
                    <TextBlock  Grid.Column="2" Grid.Row="0" Text="F. Izq." FontSize="18" VerticalAlignment="Center"/>
                    <ToggleButton x:Name="tglFIzquierda" Grid.Column="3" Grid.Row="0" Style="{StaticResource MaterialDesignSwitchToggleButton}" ToolTip="MaterialDesignSwitchToggleButton with Custom Track Background" VerticalAlignment="Center" HorizontalAlignment="Left">
                        <materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                            <SolidColorBrush Color="Green" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                        <materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                            <SolidColorBrush Color="Red" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                    </ToggleButton>
                    <TextBlock  Grid.Column="2" Grid.Row="1" Text="C. Izq." FontSize="18" VerticalAlignment="Center"/>
                    <ToggleButton x:Name="tglCIzquierda" Grid.Column="3" Grid.Row="1" Style="{StaticResource MaterialDesignSwitchToggleButton}" ToolTip="MaterialDesignSwitchToggleButton with Custom Track Background" VerticalAlignment="Center" HorizontalAlignment="Left">
                        <materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                            <SolidColorBrush Color="Green" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                        <materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                            <SolidColorBrush Color="Red" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                    </ToggleButton>
                    <TextBlock  Grid.Column="2" Grid.Row="2" Text="FR. Izq." FontSize="18" VerticalAlignment="Center"/>
                    <ToggleButton x:Name="tglFrIzquierda" Grid.Column="3" Grid.Row="2" Style="{StaticResource MaterialDesignSwitchToggleButton}" ToolTip="MaterialDesignSwitchToggleButton with Custom Track Background" VerticalAlignment="Center" HorizontalAlignment="Left">
                        <materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                            <SolidColorBrush Color="Green" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                        <materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                            <SolidColorBrush Color="Red" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                    </ToggleButton>
                    <TextBlock  Grid.Column="2" Grid.Row="3" Text="Dir. Izq." FontSize="18" VerticalAlignment="Center"/>
                    <ToggleButton x:Name="tglDirIzquierda" Grid.Column="3" Grid.Row="3" Style="{StaticResource MaterialDesignSwitchToggleButton}" ToolTip="MaterialDesignSwitchToggleButton with Custom Track Background" VerticalAlignment="Center" HorizontalAlignment="Left">
                        <materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                            <SolidColorBrush Color="Green" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                        <materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                            <SolidColorBrush Color="Red" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                    </ToggleButton>
                    <TextBlock  Grid.Column="2" Grid.Row="4" Text="ABS" FontSize="18" VerticalAlignment="Center"/>
                    <ToggleButton x:Name="tglAbs" Grid.Column="3" Grid.Row="4" Style="{StaticResource MaterialDesignSwitchToggleButton}" ToolTip="MaterialDesignSwitchToggleButton with Custom Track Background" VerticalAlignment="Center" HorizontalAlignment="Left">
                        <materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                            <SolidColorBrush Color="Green" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
