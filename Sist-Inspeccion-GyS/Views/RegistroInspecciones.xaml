                            <SolidColorBrush Color="Red" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                    </ToggleButton>

                    <TextBox x:Name="txtObservaciones"  Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="5" TextWrapping="Wrap" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" MinWidth="280" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" SpellCheck.IsEnabled="True" materialDesign:HintAssist.Hint="Observaciones"/>
                </Grid>
            </GroupBox>

            <!--Groupbox de las llantas-->
            <GroupBox x:Name="grbLlantas" Grid.Column="3" Grid.Row="1" Grid.ColumnSpan="2" Header="Llantas del Remolque" FontSize="18" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock  Grid.Row="0" Grid.Column="0" Text="Posición" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Izq. Ext(11)" FontSize="18" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Izq. Int(12)" FontSize="18" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Izq. Ext(15)" FontSize="18" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Izq. Int(16)" FontSize="18" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Der. Int(13)" FontSize="18" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Der. Ext(14)" FontSize="18" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="7" Grid.Column="0" Text="Der. Int(17)" FontSize="18" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="8" Grid.Column="0" Text="Der. Ext(18)" FontSize="18" VerticalAlignment="Center"/>


                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Marca" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    <ComboBox x:Name="cmbIzqExt11"  Grid.Row="1" Grid.Column="1" materialDesign:ComboBoxAssist.ShowSelectedItem="{Binding ElementName=DisplaySelectedItemCheckBox, Path=IsChecked}" FontSize="18" VerticalAlignment="Stretch">
                        <ComboBoxItem IsSelected="True" Content="Avon tires" />
                        <ComboBoxItem Content="BF Goodrich" />
                        <ComboBoxItem Content="Bridgestone" />
                        <ComboBoxItem Content="Continental" />
                        <ComboBoxItem Content="Cooper tires" />
                        <ComboBoxItem Content="Dayton" />
                        <ComboBoxItem Content="Dickcepek" />
                        <ComboBoxItem Content="Dunlop tires" />
                        <ComboBoxItem Content="Falken" />
                        <ComboBoxItem Content="Firestone" />
                        <ComboBoxItem Content="Fortune" />
                        <ComboBoxItem Content="Fuzion" />
                        <ComboBoxItem Content="General" />
                        <ComboBoxItem Content="Goodride" />
                        <ComboBoxItem Content="Goodyear" />
                        <ComboBoxItem Content="Hankook" />
